<h2>Mosquito Readings for <%= @mosquito_trap.name %></h2>

<% if @readings.present? %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Date</th>
        <th>Count</th>
      </tr>
    </thead>
    <tbody>
      <% @readings.each do |reading| %>
        <tr>
          <td><%= reading.date.strftime('%Y-%m-%d') %></td>
          <td><%= reading.count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @readings %>
<% else %>
  <p>No readings available for this trap.</p>
<% end %>
